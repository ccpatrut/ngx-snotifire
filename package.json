{
  "name": "snotifire-workspace",
  "version": "1.0.1-beta",
  "license": "Apache-2.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --aot --base-href=/ngx-snotifire/ --output-path=demo/",
    "lib:build:prod": "ng build ngx-snotifire",
    "example:build": "ng build ",
    "watch": "ng build --watch --configuration development",
    "test": "npm run snotifire-workspace:test; npm run lib:test",
    "snotifire-workspace:test": "ng test snotifire-workspace --browsers=ChromeHeadless --watch=false --progress --code-coverage",
    "lib:test": "ng test ngx-snotifire --browsers=ChromeHeadless --watch=false --progress --code-coverage",
    "lint": "ng lint",
    "compodoc:build": "compodoc -p tsconfig.doc.json -n ng-snotify -d demo/compodoc/ --hideGenerator --theme Laravel",
    "compodoc:build-and-serve": "compodoc -p tsconfig.doc.json -s",
    "compodoc:serve": "compodoc -s",
    "docs:build": "gitbook install docs && gitbook build ./docs ./demo/documentation"
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "^16.2.12",
    "@angular/cdk": "^16.2.12",
    "@angular/common": "^16.2.12",
    "@angular/compiler": "^16.2.12",
    "@angular/core": "^16.2.12",
    "@angular/forms": "^16.2.12",
    "@angular/material": "^16.2.12",
    "@angular/platform-browser": "^16.2.12",
    "@angular/platform-browser-dynamic": "^16.2.12",
    "@angular/router": "^16.2.12",
    "@compodoc/compodoc": "^1.1.19",
    "graceful-fs": "^4.2.10",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "16.2.10",
    "@angular-eslint/builder": "14.1.2",
    "@angular-eslint/eslint-plugin": "14.1.2",
    "@angular-eslint/eslint-plugin-template": "14.1.2",
    "@angular-eslint/template-parser": "14.1.2",
    "@angular/cli": "16.2.10",
    "@angular/compiler-cli": "16.2.12",
    "@types/jasmine": "~4.0.0",
    "@typescript-eslint/eslint-plugin": "5.37.0",
    "@typescript-eslint/parser": "5.37.0",
    "angular-cli-ghpages": "^1.0.3",
    "eslint": "^8.23.1",
    "jasmine-core": "~4.3.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "ng-packagr": "^16.2.2",
    "typescript": "~5.3.0"
  }
}
